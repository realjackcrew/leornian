generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  // WHOOP integration credentials stored as JSON
  whoopCredentials Json?
  logs      DailyLog[]
}

model DailyLog {
  id          String   @id @default(cuid())
  userId      String
  date        String // YYYY-MM-DD format for the log's calendar date
  healthData  Json?    // Stores the complete health logging data as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])

  @@unique([userId, date])
}