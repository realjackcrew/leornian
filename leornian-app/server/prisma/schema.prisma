generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  firstName String?
  lastName  String?
  logs      DailyLog[]
}

model DailyLog {
  id          String   @id @default(cuid())
  userId      String
  // Legacy fields for backward compatibility
  focusScore  Int?
  notes       String?
  sleepHours  Float?
  hrv         Int?
  strain      Int?
  dietSummary String?
  screenTime  Int?
  // New comprehensive health data structure
  healthData  Json?    // Stores the complete health logging data as JSON
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id])
}