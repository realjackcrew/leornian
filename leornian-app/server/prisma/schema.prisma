generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  logs      DailyLog[]
}

model DailyLog {
  id          String   @id @default(cuid())
  userId      String
  focusScore  Int?
  notes       String?
  sleepHours  Float?
  hrv         Int?
  strain      Int?
  dietSummary String?
  screenTime  Int?
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}